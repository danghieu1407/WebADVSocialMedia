<div class="modal fade" id="CommentModal">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Bình Luận</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form method="post" id="SendComment">
          <!-- Gửi comment -->
          <div class="CommentList">
            <div class="ElementComment">
              <h6 class="UserComment"> Tên: Cao Bảo Thái</h6>
              <div class="ContentOfComment">Nội dung: Hiểu rồi </div>
              <br>
            </div>
            
          </div>
          <div class="form-group">
            <table class="table table-striped table-bordered">
              <tr>
                <td>
                  <input type="text" name="authId" id="authID" value="<%= user.authId%>" hidden>
                  Người gửi : <%= user.name%>
                </td>
              </tr>
              <tr>
                <td>
                  <label for="comment">Bình Luận</label>
                  <textarea class="form-control" rows="5" id="comment" name="comment"></textarea>
                </td>
              </tr>
            </table>
          </div>
          <button type="submit" class="btn btn-primary">Đăng</button>
        </form>
      </div>
      <!-- Modal footer -->
    </div>
  </div>
</div>